<Window x:Class="TablewareBozh.Tableware"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TablewareBozh"
        mc:Ignorable="d"
        Icon="Images/icon.ico"
        Title="Tableware" Height="800" Width="1800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="4*"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#76e383"></Grid>
        <Grid Grid.Row="2" Background="#498c51"></Grid>
        <Image Source="Images/logo.png" Grid.Row="0" Width="150" HorizontalAlignment="Left" Margin="10"></Image>
        <TextBlock Grid.Row="0" Text="ООО «Нож и вилка»" FontSize="60" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"></TextBlock>
        <Frame NavigationUIVisibility="Hidden" Grid.Row="1" Name ="MainFrame" Height="560"></Frame>
    </Grid>
</Window>
